<div class="container mt-5" style="max-width: 576px;">
  {{#if alert}}
    <div class="alert alert-danger" role="alert">
      The url: <strong>{{alert}}</strong> doesn't exist! Please try again!
    </div>
  {{/if}}
  <h1 style="color: #0d6efd">URL Shortener</h1>

  {{#if newUrl}}
    <h4 class="mt-3">Success! Please use this link:</h4>
    <div class="link">
      <a href="{{newUrl}}" id="newUrl">{{newUrl}}</a>
    </div>
    <div class="buttons mt-3">
      <button class="btn btn-primary" onclick="copyToClipboard(event)">Copy</button>
      <a href="/"><button class="btn btn-primary">Back</button></a>
    </div>
  {{else}}
    <form action="/" method="POST" class="mt-3">
      <label for="" class="form-label">Input URL here</label>
      <div class="input-group">
        <input class="form-control" type="url" pattern="https?://.+" name="url" placeholder="https://example.com"
          required>
        <button class="btn btn-primary" type="submit">Shorten</button>
      </div>
    </form>
  {{/if}}
</div>